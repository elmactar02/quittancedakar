model AgencyEmployee {
  id String @id @default(uuid())

  // Foreign Keys
  userId   String @unique @map("user_id")
  agencyId String @map("agency_id")

  // Employee Information
  position   String   @db.VarChar(100)
  department String?  @db.VarChar(100)
  hireDate   DateTime @map("hire_date") @db.Date
  salary     Decimal? @db.Decimal(10, 2)
  isManager  Boolean  @default(false) @map("is_manager")

  // Internal Relations
  user   User   @relation("UserAgencyEmployee", fields: [userId], references: [id], onDelete: Cascade)
  agency Agence @relation("AgencyEmployees", fields: [agencyId], references: [id], onDelete: Cascade)

  // Date and time
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("agency_employees")
}
