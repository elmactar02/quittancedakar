model Locataire {
  id String @id @default(uuid())

  // Foreign Keys
  userId String @unique @map("user_id")
  agenceId String? @map("agence_id")
  // Basic Information
  name    String @db.VarChar(100)
  email   String @unique @db.VarChar(100)
  adresse String @db.VarChar(200)
  role    String @default("tenant")

  // Internal Relations
  user       User        @relation("UserLocataire", fields: [userId], references: [id], onDelete: Cascade)
  quittances Quittance[] @relation("QuittanceLocataire")
  agence     Agence?      @relation("AgenceLocataire", fields: [agenceId], references: [id])

  // Date and time
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @default(now()) @map("updated_at")

  @@map("locataires")
}
