model Locataire {
  id                      String                  @id @default(uuid())

  // Foreign Keys
  userId                  String                  @unique @map("user_id")

  // Basic Information
  name                    String                  @db.VarChar(100)
  email                   String                  @unique @db.VarChar(100)
  adresse                 String                  @db.VarChar(200)
  role                    String                  @default("tenant")

  // Internal Relations
  user                    User                    @relation("UserLocataire", fields: [userId], references: [id], onDelete: Cascade)
  quittances              Quittance[]             @relation("QuittanceLocataire")
  agences                 Agence[]                @relation("AgenceLocataire")

  // Date and time
  createdAt               DateTime                @default(now()) @map("created_at")
  updatedAt               DateTime                @updatedAt @map("updated_at")

  @@map("locataires")
}
